{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./out",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "noUnusedLocals": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
